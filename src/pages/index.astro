---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import MainLayout from "../components/MainLayout.astro";
import Herosection from "../components/Herosection.astro";
import Button from "../components/Button.astro";
import Infoboks from "../components/Infoboks.astro";
import Tilbageknap from "../components/Tilbageknap.astro";
import Menu from "../components/Menu.astro";
import Card from "../components/Card.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="global.css" type="image/svg+xml" href="/favicon.svg" />
    <title>Astro</title>
  </head>
  <body>
    <main>
      <Header showImage={false} />
      <Herosection />
      <div>
        <section>
          <Button class="knap1" text="TICKETS/" link="/tickets" />
        </section>
        <section>
          <Button class="knap2" text="LINEUP/" link="/lineup" />
        </section>
      </div>
    </main>
  </body>
</html>

<style>
  div {
    display: flex;
    padding-top: 300px;
    gap: 25rem;
    flex-wrap: wrap;
  }
  body,
  main {
    display: grid;
    place-items: center;
    min-height: 100vh;
    margin: 0;

    > * {
      grid-area: 1 / 1;
    }
    header {
      z-index: 1;
      position: absolute;
      top: 0;
      left: 10px;
    }
  }
</style>
